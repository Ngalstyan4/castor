
Import('env')

test_env = env.Clone()

tests = [
    "getuid",
    "helloworld",
    "hellodebug",
    "network_basic",
    "kqueue",
    "rand",
    "read",
    "setuid",
    "thread_basic",
    "thread_mutex",
    "thread_print",
    "time",
    "fork_basic",
]

test_env.Append(CPPFLAGS = ["--sysroot=$SYSROOT"])
test_env.Append(LINKFLAGS = ["-static", "--sysroot=$SYSROOT"])
test_env.Append(LIBS = ["thr", "c"])

for t in tests:
    test_env.Program(t, [ "../librr/librr.o", t+".c"])

